	name  = Beau McCartney
	; NOTE: use this when I want to enforce setting email per-repo
	; useConfigOnly  = true
[init]
	defaultBranch = main
[rebase]
	autoStash = true
[push]
	default = current
[github]
	user = beaumccartney
[gitlab]
	user = BeauSLM
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	longpaths = true
	compression = 0
	pager = delta

[commit]
	verbose = 1

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true
	features = side-by-side line-numbers decorations

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
	mnemonicPrefix = true
	renames = copies
	algorithm = histogram
[extensions]
	worktreeConfig = true
[merge]
	ff = only
[pull]
	ff = only
[advice]
	detachedHead = false
[fetch]
	writeCommitGraph = true
	prune = true
	pruneTags = true
	parallel = 0
[rerere]
	enabled = true
	autoUpdate = true
[alias]
	s      = status --short
	sb     = status --short --branch
	st     = status

	cfd    = clean -fd

	co     = checkout
	cob    = checkout -b
	b      = branch -vv
	ba     = branch -vva
	bd     = branch --delete

	a      = add
	aa     = add --all
	rs     = restore
	rst    = restore --staged

	c      = commit
	ca     = commit --all
	amend  = commit --amend
	reword = commit --amend --only

	d      = diff
	ds     = diff --stat
	dc     = diff --staged
	dcs    = diff --staged --stat
	dw     = diff --word-diff
	dcw    = diff --staged --word-diff

	y      = pull
	yr     = pull --rebase
	p      = push
	pf     = push --force-with-lease
	fa     = fetch --all

	r      = remote -v

	w      = worktree
	wa     = worktree add
	wl     = worktree list
	wp     = worktree prune
	wm     = worktree move
	wr     = worktree remove

	l      = log
	ls     = log --stat
	lo     = log --oneline --decorate --color --graph

	rb     = rebase
	rba    = rebase --abort
	rbc    = rebase --continue
	rbi    = rebase --interactive
